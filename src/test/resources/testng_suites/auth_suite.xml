<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Auth Suite" verbose="1" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="com.solvd.QA.lecture29_01.listeners.TestNGListener"/>
    </listeners>

    <test name="Login tests 1" parallel="methods" thread-count="3">
        <classes>
            <class name="com.solvd.QA.lecture29_01.LogInTest">
                <methods>
                    <include name="verifyLoginWithValidCredentialsTest"/>
                    <exclude name="verifyLoginWithInvalidCredentialsTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Login tests 2">
        <classes>
            <class name="com.solvd.QA.lecture29_01.LogInTest"/>
        </classes>
    </test>
    <test name="Login tests 3">
        <classes>
            <class name="com.solvd.QA.lecture29_01.LogInTest"/>
        </classes>
    </test>
</suite>